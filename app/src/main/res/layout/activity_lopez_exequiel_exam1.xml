<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/alphaOmega"
    tools:context=".LopezExequielExam1">

    <TextView
        style="@style/topBar"
        android:text="Card Activity" />

    <LinearLayout style="@style/boxTop">

        <LinearLayout style="@style/innerBoxTop">

            <TextView
                android:id="@+id/textView"
                style="@style/nameTop"
                android:text="@string/nameTitleTop" />

            <TextView
                android:id="@+id/textView5"
