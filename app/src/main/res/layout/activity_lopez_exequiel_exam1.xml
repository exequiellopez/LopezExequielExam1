                android:text="@string/descTop" />

            <ImageView
                android:id="@+id/imageView"
                style="@style/imageTop"
                app:srcCompat="@drawable/buffsuki" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout style="@style/boxMid">

        <LinearLayout style="@style/innerBoxMid">

            <TextView
                android:id="@+id/textView6"
                style="@style/nameMid"
                android:text="@string/nameTitleMid" />

            <TextView
                android:id="@+id/textView7"
                style="@style/descriptionMid"
                android:text="@string/descMid" />

            <ImageView
                android:id="@+id/imageView2"
                style="@style/imageMid"
                app:srcCompat="@drawable/buffyuri" />


        </LinearLayout>
    </LinearLayout>

    <LinearLayout style="@style/boxBot">

        <LinearLayout style="@style/innerBoxBot">

            <TextView
                android:id="@+id/textView8"
                style="@style/nameBot"
                android:text="@string/nameTitleBot" />

            <TextView
                android:id="@+id/textView9"
                style="@style/descriptionBot"
                android:text="@string/descBot" />

            <ImageView
                android:id="@+id/imageView3"
                style="@style/imageBot"
                app:srcCompat="@drawable/buffsayori" />
        </LinearLayout>

